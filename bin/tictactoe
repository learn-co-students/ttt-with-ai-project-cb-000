#!/usr/bin/env ruby

require_relative '../config/environment'
require 'pry'

puts "Welcome to Tic Tac Toe!"
puts "How many players do you want to play with? 0, 1, or 2?"
num_players = ""

until num_players =~ /[012]/
  puts "Please enter only 0, 1, or 2"
  num_players = gets.strip
end

case num_players
when "0"
    game = Game.new( player_1 = Players::Computer.new( "X" ), player_2 = Players::Computer.new( "0" ) )
  when "1"
    game = Game.new( player_1 = Players::Human.new( "X" ), player_2 = Players::Computer.new( "0" ) )
  else
    game = Game.new
end

game.play
